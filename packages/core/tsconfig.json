{
  "$schema": "https://json.schemastore.org/tsconfig",
  "display": "Node",
  "extends": "../tsconfig/node.json",
  "compilerOptions": {
    "target": "ES2022",
    "module": "ES2022",
    "moduleResolution": "NodeNext",
    "esModuleInterop": true,
    "lib": ["ES2022"],
    "outDir": "./dist"
  },
  "include": ["src/**/*.ts", "src/**/*.d.ts"],
  "exclude": ["node_modules"]
}
